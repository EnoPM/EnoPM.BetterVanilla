<Project Sdk="Microsoft.NET.Sdk">
    
    <PropertyGroup>
        <RootNamespace>BetterVanilla</RootNamespace>
        <PluginName>BetterVanilla</PluginName>
        <PluginGuid>bettervanilla.eno.pm</PluginGuid>
        <PluginVersion>1.4.0</PluginVersion>
        <Description>Enhanced Among Us Vanilla experience</Description>
    </PropertyGroup>

    <PropertyGroup>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    </PropertyGroup>

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <AssemblyName>$(PluginName)</AssemblyName>
        <Version>$(PluginVersion)</Version>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <LangVersion>latest</LangVersion>
        <RestoreAdditionalProjectSources>
            https://api.nuget.org/v3/index.json;
            https://nuget.bepinex.dev/v3/index.json
        </RestoreAdditionalProjectSources>
        <Configurations>Debug;Release;Android</Configurations>
        <Platforms>AnyCPU</Platforms>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="BepInEx.IL2CPP.MSBuild" Version="2.1.0-rc.1"/>
        <PackageReference Include="BepInEx.Unity.IL2CPP" Version="6.0.0-be.735" />
    </ItemGroup>
    
    <ItemGroup Condition="$(Configuration) != 'Android'">
        <PackageReference Include="AmongUs.GameLibs.Steam" Version="2025.9.9" IncludeAssets="runtime; build; native; contentfiles; analyzers; buildtransitive" />
    </ItemGroup>

    <ItemGroup Condition="$(Configuration) == 'Android'">
        <PackageReference Include="AmongUs.GameLibs.Android" Version="2025.9.9" IncludeAssets="runtime; build; native; contentfiles; analyzers; buildtransitive" />
    </ItemGroup>

    <ItemGroup Condition="$(Configuration) != 'Android'">
      <EmbeddedResource Include="Assets\menu.ui" />
      <EmbeddedResource Include="Assets\better.game" />
    </ItemGroup>

    <ItemGroup Condition="$(Configuration) == 'Android'">
        <EmbeddedResource Include="Assets\menu.ui.android" />
        <EmbeddedResource Include="Assets\better.game.android" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\BetterVanilla.Cosmetics.Api\BetterVanilla.Cosmetics.Api.csproj" />
    </ItemGroup>
    
    <Target Name="IncludeCosmeticsApi" BeforeTargets="CoreCompile">
        <ItemGroup>
            <Compile Include="$(SolutionDir)\BetterVanilla.Cosmetics.Api\Core\**\*.cs" />
            <Compile Include="$(SolutionDir)\BetterVanilla.Cosmetics.Api\Hats\**\*.cs" />
            <Compile Include="$(SolutionDir)\BetterVanilla.Cosmetics.Api\NamePlates\**\*.cs" />
            <Compile Include="$(SolutionDir)\BetterVanilla.Cosmetics.Api\Visors\**\*.cs" />
        </ItemGroup>
    </Target>

    <Target Name="AddGeneratedFile" BeforeTargets="BeforeCompile;CoreCompile" Inputs="$(MSBuildAllProjects)" Outputs="$(IntermediateOutputPath)GeneratedFile.cs">
        <PropertyGroup>
            <GeneratedText><![CDATA[
namespace $(RootNamespace).GeneratedRuntime%3B
internal static class GeneratedProps
{
    public const string Guid = "$(PluginGuid)"%3B
    public const string Name = "$(PluginName)"%3B
    public const string Version = "$(PluginVersion)"%3B
}
  ]]></GeneratedText>
            <GeneratedFilePath>$(IntermediateOutputPath)PluginProps.Generated.cs</GeneratedFilePath>
        </PropertyGroup>
        <ItemGroup>
            <Compile Include="$(GeneratedFilePath)"/>
            <FileWrites Include="$(GeneratedFilePath)"/>
        </ItemGroup>
        <WriteLinesToFile Lines="$(GeneratedText)" File="$(GeneratedFilePath)" WriteOnlyWhenDifferent="true" Overwrite="true"/>
    </Target>
</Project>
